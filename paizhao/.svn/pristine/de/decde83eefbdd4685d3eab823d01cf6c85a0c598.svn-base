.sort-filter-item-tab-1{
	.item-wrap{
		display: -webkit-box;
		background-color: #fff;
		.sort-item{
			
			-webkit-box-flex:1;
			.list{
				display:-webkit-box;
				li{
					padding:10px 0px;
					-webkit-box-flex:1;
					text-align: center;
					&.cur{
						.txt{
							color: #24c7c7;     
						}
					}
					.icon-font{
						font-size: 10px;
						display:block;
					}
					.shixinxiaojiantou-up{
						-webkit-transform:rotateX(180deg);
					}
					.arrow-item{
						margin-left: 5px;   

					}
					.item{
						display:inline-block;
						margin: 0 auto;
					}

				}
			}
		}
		.filter-item{
			padding:10px 0px;
			width:52px;
			text-align: center;
			.filter-icon{
				background-size: cover;
				background-image: url(../../image/ui/filter-icon-44x44.png?__inline);
			}
		}
	}
}