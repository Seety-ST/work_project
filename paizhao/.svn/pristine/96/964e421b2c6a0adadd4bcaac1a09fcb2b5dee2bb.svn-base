/*右边层样式*/
.popup-wrap {
  .popup {
    position: fixed;
    z-index: 99;
    background: #fff;
    width: 86%;
    height: 100%;
    top: 0;
    overflow: auto;
    .popup-content {
      padding: 5px 5px 5px 15px;
      .content-title {
        padding: 5px;
      }
      .content-list {
        margin-top: 5px;
        ul {
          li {
            float: left;
            width: 30%;
            margin-right: 2%;
            margin-bottom: 10px;
            padding-top:10px;
            padding-bottom: 10px;
            text-align: center;
            border: 1px solid #ccc;
            color: #666;
          }
          .li-cur{
            border: 1px solid #24C7C7;
            color: #24C7C7;
          }
        }
      }
      .location-name {
        color: #24C7C7;
      }
    }
    .content-bottom {
      margin-bottom: 50px;
    }


    /*地址栏*/
    .location-sel {
      width: 100%;
      background-color: #FAFAFA;
      .border-r {
        border-right:1px solid #ccc;
      }
      .sel {
        float: left;
        width: 46%;
        text-align: center;
        padding: 10px 5px;
        .arrow-icon {
          border-width: 3px 3px 0px 3px;
          border-color: #666 transparent transparent transparent;
          _border-color: #666 #fff #fff #fff;
          _filter: chroma(color=white);
          position: relative;
          top: -2px;
        }
      }
      .sel-cur {
        color: #24C7C7;
        .arrow-icon {
          border-width: 0px 3px 3px 3px;
          border-color: transparent transparent #24c7c7 transparent;
          _border-color: #000 #000 #fff #000;
          _filter: chroma(color=black);
          position: relative;
          top: -5px;
        }
      }
    }

  }


  .popup-footer {
    position: fixed;
    bottom: 0px;
    z-index: 9;
    width: 86%;
    left: right;
    display:-moz-box;
    display:-webkit-box;
    display:box;
    -moz-box-pack:center;
    -webkit-box-pack:center;
    -o-box-pack:center;
    box-pack:center;
    border-top:1px solid #ccc ;
    background-color: #fff;
    /*脚部*/
    .popup-footer-btn {
      -moz-box-flex:1;
      -webkit-box-flex:1;
      box-flex:1;
      padding: 15px;
      text-align: center;
    }
    .reset {
      color: #24C7C7;
    }
    .confirm {
      background-color: #24C7C7;
      color: #fff;

    }
    .confirm-disable {
      background-color: #ccc;
    }
  }
  .border-b {
    border-bottom: 1px solid #ccc;
  }
  .popup-show {
    right: 0;
  }
  .popup-hide {
    right: -90%;
  }
}






/*弹层样式*/
.fade {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0,0,0,.5);
  -webkit-box-pack: center;
  box-pack: center;
  display: -webkit-box;
  display: box;
  -webkit-box-align: center;
  box-align: center;
}
.ui-triangle {
  width: 0;
  height: 0;
  font-size: 0;
  line-height: 0;
  border-style: solid;
  -webkit-transition: -webkit-transform .2s ease-in;
  -moz-transition: -webkit-transform .2s ease-in;
  -o-transition: -webkit-transform .2s ease-in;
  transition: -webkit-transform .2s ease-in
}