<!-- swiper js -->
<script type="text/javascript" src="../../modules/global/swiper/1.0.0/swiper3.07.min.js"></script>
<script type="text/javascript">
	var Swiper = require('wap-huipai:global/swiper/1.0.0/swiper3.07.min');
	var LZ = require('wap-huipai:global/lazyload/lazyload');
	var go_top = require('wap-huipai:global/go_top/go_top');
	$(function() 
	{
		// banner
		var mySwiper_1 = new Swiper ('#swiper-container-1',{
		    direction: 'horizontal',
		    loop: false,
		    autoplay : false,
		    // speed:false,
		    // 如果需要分页器
		    pagination: '#swiper-pagination-1'
		});

		   var mySwiper_2 = new Swiper('#swiper-container-2', {

		   		initialSlide :1,
		          		effect: 'coverflow',
		          		grabCursor: true,
		          		centeredSlides: true,
		          		loop : true,
		          		slidesPerView: 'auto',
		          		
		          		loopedSlides :3,
		          		coverflow: {
		          			rotate: 0,
		          			stretch: 0,
		          			depth: 100,
		          			modifier: 1,
		          			opacity : 50,
		          			slideShadows :false
		          		}
		   });
		   
		
		$(document).click(function(event){
			var $tar = $(event.target);
			if($tar.parents('[data-role="header-classify-btn"]').length)
			{
			}
			else
			{
				$('[data-role="header-classify-pop"]').removeClass('top42');
				$('[data-role="header-classify-pop"]').addClass('top011');
			}
		});

		new LZ($('body'),{
			// size : window.innerWidth
		});

		// 返回顶部按钮
		new go_top({
			render_ele : $('body')
		});


		var header_s_data = "";
		// 头部搜索分类套系弹窗显示
		$('[data-role="header-classify-btn"]').on('click', function(event) {
			
			if($('[data-role="header-classify-pop"]').hasClass('top011')){
				$('[data-role="header-classify-pop"]').removeClass('top011');
				$('[data-role="header-classify-pop"]').addClass('top42');
			}
			else{
				$('[data-role="header-classify-pop"]').removeClass('top42');
				$('[data-role="header-classify-pop"]').addClass('top011');
			}
		});

		$('[data-role="pop"]').find('li').on('click', function(event) {
			console.log("111");
			var selct_txt = $(this).html();

			$('[data-role="header-classify-btn"]').find('.txt').html(selct_txt);
			header_s_data = $(this).attr('attribute');
		});
		// 首页搜索
		document.onkeydown = function(e){
			var e = e || window.event;  
			var currKey=e.keyCode||e.which||e.charCode;
			if(currKey==13)
			{
			    search();
			}
		}

		// 搜索事件
		function search()
		{
			var val = $.trim($('[header-s-data="key"]').val());
			if (!val) 
			{
				return ;
			}
			if (!header_s_data) 
			{
			    header_s_data = 'list';
			}
			window.location.href = window.__HUIPAI_GLOBAL['PAGE_URL'].index + 'search/?tp=' + header_s_data + '&kw=' + encodeURIComponent(val);
		}

	});
</script>

{%$wap_global_tj%}
</html>
