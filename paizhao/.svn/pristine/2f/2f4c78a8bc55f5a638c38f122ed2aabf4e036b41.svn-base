// list 样式
.yue-ui-list-single-pic{
	.item{
		display:-webkit-box;
		background-color:#fff;    
		.img-con{
			width:42%;
			padding-top:42%;
			position:relative;
			.img{
				position:absolute;
				left:0px;
				top:0px;
				width:100%;
				height:100%;
				background-size:cover;
				display: inline-block;

			}
		}
		.text-con{
			-webkit-box-flex:1;
			.p1{
				font-size: 4vw;
			}
			.p2{
				font-size: 4vw;
			}
			.p3{
				font-size: 4vw;
			}
			
		}
	}
}
// 自适应样式2
.yue-ui-flexible-list-single-pic{
	.item{
		display:-webkit-box;
		background-color:#fff;    
		.img-con{
			width:42%;
			padding-top:42%;
			position:relative;
			.img{
				position:absolute;
				left:0px;
				top:0px;
				width:100%;
				height:100%;
				background-size:cover;
				display: inline-block;

			}
			.ui-hot-tips-mod{
				position: absolute;
				left: -8px;
				top: 0;
				
			}
			.service-type-item{
				position:absolute;
				right:0px;
				bottom:0px;
				z-index: 3;
				padding:1.3vw  0px;
				width:100%;
				text-align: right;
				background-image: linear-gradient(to right, transparent 0%, rgba(0, 0, 0, 0.1) 40%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0.3) 100%);
				background-image: -webkit-linear-gradient(to right, transparent 0%, rgba(0, 0, 0, 0.1) 40%, rgba(0, 0, 0, 0.2) 60%, rgba(0, 0, 0, 0.3) 100%);

				.service-type-icon{
					width:4vw;
					height:4vw;
					display:inline-block;
					background-size: cover;
					vertical-align: middle;
				}
				.service-type-txt{
					color:#fff;
					display:inline-block;
					vertical-align: middle;
					padding:0px 1.67vw;
					font-size: 3.3vw;  
					max-width: 60%;
					overflow: hidden;
					text-overflow: ellipsis;
					white-space: nowrap;
				}
			}
		}
		.text-con{
			-webkit-box-flex:1;
			.p1{
				font-size: 5vw;
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
			}
			.p2{
				font-size: 4vw;
				.sales-icon{
					display: inline-block;
					border-radius: 3px;
					padding: 0;
					margin-left: 2vw;
					vertical-align: middle;
					font-size: 0;
					img{
						width: 4.67vw;
						height: 4.67vw;
					}
				}
				.money-txt{
					font-size: 4.33vw;
				}
			}
			.p3{
				font-size: 4vw;
			}
			.p4{
				font-size: 4vw;

			}
			.avatar-item{
				font-size: 4vw;

				.ui-avatar-icon-20{
					width: 6.67vw;
					height: 6.67vw;
					i.avatar{
						width: 100%;
						height: 100%;
						background-size: cover;
						display: inline-block;
						border-radius: 50%;
					}
				}
				.name{
					margin-left: 5px;
					vertical-align: middle;
					display:inline-block;
					max-width: 64%;
					height: 6.67vw;
					overflow: hidden;
					text-overflow: ellipsis;
					white-space: nowrap;
				}
				.grade-icon{
					width:6vw;
					height:6vw;
					margin-left: 5px;
					display:inline-block;
					background-image: url(../../image/26x22.png);
					background-size: cover;
					vertical-align: middle;
					display:inline-block;
				}
			}
			
		}
	}
}
.yue-ui-list-double-pic{

		background-color:#fff;
		.item{
			width:50%;
			margin-bottom: 15px;
			float: left;
			box-sizing:border-box;
			padding-right:5px;
			.item-area{
				border:1px solid #eee;
				.img-item{
					width:100%;
					padding-top:100%;
					position:relative;
					.img{
						width:100%;
						height:100%;
						position:absolute;
						left:0px;
						top:0px;
						background-size: cover;
						display: inline-block;
					}
				}
				.text-item{
					padding:15px 10px;
					.p1{
						font-size: 4vw;
					}
					.p2{
						font-size: 4vw;
						overflow:hidden;
						text-overflow:ellipsis;
						white-space: nowrap;

					}
				}
			}
			
			&:nth-child(2n+0){
				padding-right: 0px;
				padding-left: 5px;
			}
		}
}

// 固定图片大小的列表 100*100      70*70
.yue-ui-single-fix-size-pic{
	.item{
		display:-webkit-box;
		background-color:#fff;
		.img-item{
			.img{
				width: 100%;
				height: 100%;
				background-size: cover;
				display: inline-block;
			}
		}
		.img-size-70x70{
			width:70px;
			height:70px;
		}
		.img-size-100x100{
			width:100px;
			height:100px;
		}
		.txt-item{
			-webkit-box-flex:1;
		}
	}

}



/* 列表主要信息 */
.ui-list-info {
  -webkit-box-flex: 1;
  box-flex: 1;
  padding-right: 20px;
  display: box;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
}
.ui-list-info > h4 {
  font-size: 16px;
  line-height: 24px;
}
.ui-list-info > p {
  font-size: 13px;
  line-height: 22px;
  color: #808080;
}