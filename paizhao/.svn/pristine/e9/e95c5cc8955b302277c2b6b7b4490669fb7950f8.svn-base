<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=GBK">
    <title>数据调用列表</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link type="text/css" href="css/jquery-ui-1.8.17.custom.css" rel="stylesheet"/>
    <link type="text/css" href="css/jquery-ui-timepicker-addon.css" rel="stylesheet"/>
    <link href="js/shadowbox/shadowbox.css" rel="stylesheet" type="text/css"/>
    <script type="text/javascript" src="./js/jquery.min.js"></script>
    <script type="text/javascript" src="js/jquery-ui-1.8.17.custom.min.js"></script>
    <script type="text/javascript" src="js/jquery-ui-timepicker-addon.js"></script>
    <script type="text/javascript" src="js/jquery-ui-timepicker-zh-CN.js"></script>    
    <script type="text/javascript" src="js/shadowbox/shadowbox.js"></script>    
    <script type="text/javascript">
        Shadowbox.init({
            handleOversize: "drag",
            overlayColor: '#000',
            modal: true,
            displayNav: true,
            displayCounter: false
        });
        Shadowbox.setup();
    </script>
<script type="text/javascript">
	 $(function () {
    $(".ui_timepicker").datetimepicker({
        showSecond: true,
        timeFormat: '',
        stepHour: 1,
        stepMinute: 1,
        stepSecond: 1
    });
});
</script>
</head>
<body>
<div class="mainbox">
    <table class="search_table" width="100%">
        <tbody>
        <tr>
            <td>
                <form action="" method="post">
                   添加时间  
                   <input id="begin_time" type="text" size="14" name="add_time_s" value="{add_time_s}" class="ui_timepicker">
                   至
                   <input id="end_time" type="text" size="14" name="add_time_e" value="{add_time_e}" class="ui_timepicker" />
                   页面类型:
                   <input type="text" name="page_type" placeholder="page_type" value="{page_type}"/>
                   标题:
                   <input type="text" name="title" placeholder="title" value="{title}"/>
                   <input type="hidden" name="action" value="goods_get_data_list"/>
                   <input type="submit" class="btn_class"  id="button" value="查询" />
                   &nbsp;&nbsp;
                   <a class="btn_class" rel="shadowbox[user_address_save]" href="?action=goods_get_data_save">添加</a>
                   &nbsp;&nbsp;
                   <a class="btn_class" target="_blank" href="http://yp.yueus.com/yue_admin/task/yueyue_tpl_test/index.php?is_admin=1">前台使用例子</a>
                 </form>
			</td>
            <td class="search">
                
            </td>
        </tr> 
        </tbody>
    </table>
    <div id="tabs">
        <div class="tabbox">
            <div class="table-list">
                <table width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>数据调用_页面类型</th>
						<th>数据调用_标题</th>
                        <th>添加时间</th>
                        <th>操作</th>
                      </tr>
                    </thead>
                    <tbody>
                    <!-- BEGIN list -->
                        <tr>
                          <td align="center">{id}</td>
                          <td align="center">{page_type}</td>
                          <td align="center">{title}</td>
                          <td align="center">{add_time}</td>
                          <td align="center">
                              <a class="btn_class" rel="shadowbox[goods_get_data_save]" href="?action=goods_get_data_save&page_type={page_type}&title={title}&is_admin=1">编辑</a>
                              &nbsp;&nbsp;
                              <a class="btn_class" href="javascript:void(0)" onclick="del({id})">删除</a>
                          </td>
                        </tr>
                    <!-- END list -->
                    </tbody>
                </table>
               
            </div>
        </div>
        <div id="pages" class="page"> {page}</div>
    </div>
</div>

</body>
</html>
<script>
    function del(id)
    {
        if( ! id )
        {
            return false;
        }
        if( confirm('确定删除?'))
        {
            window.location.href="goods.php?action=goods_get_data_del&id="+id;
        }
        
        return false;
    }
</script>