.camera-page{
	.p1th{
		.item-wrap{
			.img-item{
				width: 100%;
				padding-top: 40%;
				position: relative;
				.img{
					width: 100%;
					padding-top: 40%;
					display: inline-block;
					position:absolute;
					left: 0;
					top:0;
					background-size: 100%;
					background-repeat: no-repeat;
					background-image: url(../../image/camera/test/750x300.jpg);
				}
				.txt{
					width: 100%;
					height: 100%;
					background: rgba(0,0,0,.4);
					position:absolute;
					left:0;
					top:0;
					
					.box-1{
						padding:20% 15px 0px 15px;
						.lbox{
							.ui-avatar-icon{
								i{
									border:2px solid #fff;
								}
							}
						}
						.rbox{
							padding:3% 0px 0px 10px;
							.number-2{
								margin-left: 20px;
							}
						}
					}
				}
			}
			.txt-item{
				padding:15px;
				background-color: #fff;
				.box-1{
					.address-icon{
						background-image: url(../../image/camera/address-icon-32x32.png);
						background-size: 100%;
						background-repeat: no-repeat;
						display:inline-block;
						vertical-align: middle;
					}
					.txt{
						display:inline-block;
						vertical-align: middle;
					}
				}
				.box-2{
					height:21px;
					margin-top: 15px;
					overflow: hidden;
					text-overflow: ellipsis;
					white-space: nowrap;
				}

			}
		}
	}
}