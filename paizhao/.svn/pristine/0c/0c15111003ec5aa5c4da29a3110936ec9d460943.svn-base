.sort-filter-item-tab-1{
	.item-wrap{
		display: -webkit-box;
		.sort-item{
			
			-webkit-box-flex:1;
			.list{
				display:-webkit-box;
				li{
					padding:10px 0px;
					-webkit-box-flex:1;
					text-align: center;
					&.cur{
						color: #24c7c7;     
					}
				}
			}
		}
		.filter-item{
			padding:10px 0px;
			width:52px;
			text-align: center;
			.filter-icon{
				background-size: cover;
				background-image: url(../../image/ui/filter-icon-44x44.png);
			}
		}
	}
}