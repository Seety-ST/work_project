.goods-detail-page{
	padding-bottom: 70px;
	.p1th{
		margin-bottom: 10px;
		background-color: #fff;
		.item-wrap{
			.img-item{
				.img{
					width:100%;
					padding-top: 100%;
					display: inline-block;
					background-size: 100%;
					background-repeat: no-repeat;
					background-image: url(../../image/goods/test/750x750.jpg);
				}
			}
			.txt-item{
				padding:12px 15px;
				.box-1{
					color:#111111;
					line-height: 25px;
					.type-txt{
						padding:2px 5px;
						background-color: #fbb939;
						color:#fff;
						margin-right: 8px;
					}
				}
				.box-2{
					padding-top: 3px;
					.lbox{
						font-size: 21px;
					}
					.rbox{
						margin-top: 6px;
					}
				}
			}
			.promise-item{
				padding:15px;
				background-color: #fcfcfc;
				.list{
					li{
						float: left;
						margin-right: 15px;
						background-color: #fcfcfc;
						.i-iconfont-success{
							color:#24c7c7;
							font-weight: bold;
						}
					}

				}
			}
		}
	}
	.p2th{
		padding:20px 15px;
		background-color: #fff;
		.item-wrap{
			.title-item{
				margin-bottom: 10px;
				.i-iconfont-allow-rotate{
					transform:rotate(180deg);
					-webkit-transform:rotate(180deg);
				}
			}
			.item{

				.list{
					li{

						padding:8px 10px;
						border:1px solid #ddd;
						float:left;
						margin:10px 10px 0px 0px;
						&.cur{
							border-color: #24c7c7;
							color:#fff;
							background-color: #24c7c7;
						}
					}
				}
			}
		}
	}
	.p3th{
		.item-wrap{
			.seller-info-item{
				background-color: #fff;
				padding:15px;
				margin:10px;
				border-radius: 4px;
				-webkit-border-radius:4px;
				border:1px solid #ddd;
			}
			.txt-item{
				margin-left: 10px;
				.box-1{
					margin-top: 3px;
				}

			}
			.i-iconfont-allow{
				margin-top: 13px;
				transform:rotate(270deg);
				-webkit-transform:rotate(270deg);
			}
		}
	}
	.p4th{
		
		.item-wrap{
			.nav-item{
				background-color: #fff;
				.list{
					display:-webkit-box;
					li{
						width:50%;
						padding:15px 0px;
						text-align: center;
						background-color: #fafafa;
						border-bottom: 1px solid #ddd;
						&.cur{
							border-bottom: none;
							background-color: #fff;
							background-image: url(../../image/goods/line-img-1x3.jpg);
							background-size: 1px;
							background-repeat: repeat-x;
							background-position: left top;
						}

					}
				}
			}
			.content{
				.detail-item{
					.top-content{
						margin-bottom: 10px;
						background-color: #fff;
							.list{
								li{
									padding:15px;
									border-bottom: 1px solid #ddd;
									display:-webkit-box;
									&:last-child{
										border-bottom:none;
									}
									.lbox{
										width:30%;

									}
									.rbox{
										-webkit-box-flex:1;
									}
								}
							}
					}
					.bottom-content{
						margin-bottom: 10px;
						padding:15px;
						font-size: 14px;
						img{
							width:100%;
						}
					}
				}
				.size-item{
					background-color: #fff;
					.top-content{
						margin-bottom: 10px;
							.list{
								li{
									padding:15px;
									border-bottom: 1px solid #ddd;
									display:-webkit-box;
									&:last-child{
										border-bottom:none;
									}
									.lbox{
										width:30%;

									}
									.rbox{
										-webkit-box-flex:1;
									}
								}
							}
					}
					.bottom-content{
						margin-bottom: 10px;
						padding:15px;
					}
				}
				
			}
		}
	}
	.p5th{
		background-color: #fff;
		.item-wrap{
			.title-item{
				padding-top: 4%;
			}
			.more-item{
				padding:20px 0px;
				.more-txt{
					display: inline-block;
					vertical-align: middle;
				}
				.jiantou-icon{
					width: 16px;
					height: 16px;
					display: inline-block;
					vertical-align: middle;
					background: url(../../image/goods/jiantou-icon-32x32.png) no-repeat center;
					background-size: 100%;
				}
			}
		}
	}
	.consult-item{
		width:100%;
		position:fixed;
		left:0;
		bottom:0;
	}
}
.layui-m-layer-pai_zhao_goods_class{
	position:relative;
	.pop-contact-mod{
		.it{
			margin:10px 0px;
			.input-text{
				width:92%;
				padding:12px 4%;
				border:1px solid #ddd;
				margin-top: 15px;
			}
		}
		.ui-button{
			margin-top: 15px;
		}
		.num-box{
			margin-top: 15px;
		}
		.close-btn{
			width:22px;
			height:22px;
			display:inline-block;
			position:absolute;
			top:11px;
			right:15px;
			background: url(../../image/goods/close-btn-44x44.jpg) no-repeat center;
			background-size: contain;
		}
	}
}