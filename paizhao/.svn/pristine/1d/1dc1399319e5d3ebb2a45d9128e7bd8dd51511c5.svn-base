                $value["cur_class"] = "nav-list-li-cur";
                //判断排序
                if($order=="2")
                {
                    //降序序，icon也为降序
                    $value["sort_arrow_class"] = "sort-down-arrow";

                }
                else
                {
                    //升序，icon为升序
                    $value["sort_arrow_class"] = "sort-up-arrow";
                }

            }
            else
            {
                //有条件，箭头为降序序
                $value["sort_arrow_class"] = "sort-down-arrow";
                if($value["key"]=="3")
                {
                    $value["sort_arrow_class"] = "sort-up-arrow";
                }
            }
        }
        else
        {
            //没有条件，默认综合为选中
            if($value["key"]=="0")
            {
                $value["sort_arrow_class"] = "";
                $value["cur_class"] = "nav-list-li-cur";
            }
            else
            {
                //移动上去默认是降序
