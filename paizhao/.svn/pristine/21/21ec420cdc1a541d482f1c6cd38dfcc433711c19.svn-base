.camera-page{
	.p1th{
		padding:50px 0px;
		border-bottom: 1px solid #eee;
		.lbox{
			padding:0px 100px;
			.address-txt{
				text-align: center;
				padding-top: 20px;
				.icon{
					vertical-align: middle;
				}
				.txt{
					display: inline-block;
					vertical-align: middle;
				}
			}
		}
		.rbox{
			width: 800px;
			.item-2{
				padding-top: 40px;
				background:url(../../image/camera/txt-bg-67x61.png) no-repeat right bottom;
				.txt-2{
					padding-top: 35px;
					.list{
						li{
							float: left;
							margin-right: 65px;
						}
					}
				}
			}
		}
	}
	.p2th{
		padding-bottom: 80px;
		.item-wrap{
			.select-list-item{
				margin:20px 0px;
				background-color: #fafafa;
				.classify-item{
					.list{
						li{
							float: left;
							.li-cur{
								color:#2bd9d9;
							}
							&:hover{
								color:#2bd9d9;
							}
						}
					}
				}
				.sort-item{
					.list{
						li{
							float: left;
							.li-cur{
								color:#2bd9d9;
							}
							&:hover{
								color:#2bd9d9;
							}
						}
					}
				}
			}
		}
	}
}

