@charset "UTF-8";

.border-list {
  background-color: #fff;
}

.border-list li {
  width: 1rem;
  margin: 0.1rem auto;
  -webkit-box-pack: center;
  text-align: center;
}

.ui-list-text > li {
  line-height: 0.2rem;
  padding: 0.12rem 0.25rem 0.12rem 0;
  font-size: 0.16rem;
}

.ui-list-text > li.cur {
  background-color: #429931;
  color: #fff;
  margin-left: 0;
  padding-left: 0.15rem;
}

.ui-list-link .ui-list-info,
.ui-list-item-link .ui-list-info,
.ui-list-text .ui-list-info {
  padding-right: 0.35rem;
}

.ui-list-text.ui-list-link .ui-list-info,
.ui-list-text .ui-list-item-link .ui-list-info {
  padding-right: 0.7rem;
}

/**
* 按钮
*/

.ui-btn,
.ui-btn-lg,
.ui-btn-s {
  height: 0.3rem;
  line-height: 0.3rem;
  padding: 0 0.13rem;
  min-width: 0.55rem;
  display: inline-block;
  position: relative;
  text-align: center;
  color: #0079ff;
  font-size: 0.15rem;
  background-color: #fdfdfd;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.5, white), to(#fafafa));
  border-radius: 0.03rem;
  vertical-align: top;
  color: #00a5e0;
  -webkit-box-sizing: border-box;
  border: 0.01rem solid #cacccd;
  -webkit-background-clip: padding-box;
  background-clip: padding-box;
}

.global-header {
  height: 0.45rem;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  background: #fafafa;
  width: 100%;
  margin-bottom: 0.2rem;
}

.global-header .title {
  text-align: center;
  font-size: 0.18rem;
  line-height: 0.45rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 60%;
  margin: 0 auto;
  font-family: 'Microsoft YaHei', Verdana, SimSun;
}

.global-header .back {
  width: 0.5rem;
  height: 0.44rem;
  display: block;
  position: absolute;
  left: 0;
  top: 0;
}

.global-header .back .icon-back {
  background-image: url(http://51snap.yueus.com/static/wap/image/ui/icon-back-22x40.png);
  width: 0.11rem;
  height: 0.2rem;
  display: block;
  background-size: cover;
  margin: 0.12rem auto 0 auto;
}

.global-header .back:active .icon-back {
  background-image: url(http://51snap.yueus.com/static/wap/image/ui/icon-back-22x40-active.png);
}