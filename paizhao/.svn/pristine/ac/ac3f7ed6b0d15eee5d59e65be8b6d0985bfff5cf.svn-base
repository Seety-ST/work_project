<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta charset="gbk">
<meta http-equiv="Content-Type" content="text/html; charset=gbk">
<script type="text/javascript" src="./js/jquery.min.js"></script>
<script language="javascript" type="text/javascript" src="js/DatePicker/WdatePicker.js"></script>
<link rel="stylesheet" type="text/css" href="./css/style.css">
<title>商品类型添加与编辑模板</title>
</head>
<body>
<style>
    .J_add_btn,.J_add_cover_img{
        overflow: hidden;
    }
    .model-img-list li{
        float:left; width:85px; height:100px; text-align:center; margin-right:10px
    }
</style>
{global_header_html}

<div class="mainbox">
  <div id="tabs" style="margin-top:10px;">
    <div class="tabbox">
      <div class="table-list">
        <div class="table" style="width:100%;">          
          <fieldset>
            <legend>商品标签增加/编辑</legend>
            <iframe id="form_iframe" name="form_iframe" style="display:none;"></iframe>
			<form id="form1" name="form1" method="post" action="" target="form_iframe">
			  <table width="90%" align="center">
				  <tr>
					  <td width="26%" height="25">标签名称</td>
					  <td width="74%" height="25">
						 <input name="name" type="text" id="name" value="{tags_one.name}" />
                      </td>
                  </tr>
				  <tr>
					  <td width="26%" height="25">所属上一级类型</td>
					  <td width="74%" height="25">
                          <select name="parents_id" id="parents_id">
                                <option value="0">顶级</option>
                                <!-- BEGIN list -->
                                    <option value="{id}"  
                                            <!-- IF select_one --> selected <!-- ENDIF -->
                                             <!-- IF no_use --> disabled <!-- ENDIF -->
                                    >
                                            {shuo_jing}{name}
                                    </option>
                                <!-- END list -->
                          </select>
					  </td>
				  </tr>
                  <tr>
					  <td width="26%" height="25">排序(越小越排前 例如:0比1前)</td>
					  <td width="74%" height="25">
                          <input type='text' name='step' id="step" value="<!-- IF tags_one --> {tags_one.step} <!-- ELSE --> 0 <!-- ENDIF tags_one -->"/>
					  </td>
				  </tr>
				  <tr>
				  	  <td width="26%" height="25">是否展示</td>
					  <td width="74%" height="25">
                          <input type='checkbox' name='is_show' id="is_show" value="1" <!-- IF tags_one.is_show="1" -->checked<!-- ENDIF -->/>
					  </td>
				  </tr>
                  <tr>
                      <td colspan="2" align="center">
                          <input type="button" name="button" id="button_return" value="返回" class="btn_class"  onclick="jump();" />&nbsp;&nbsp;<input type="submit" class="btn_class" id="button" value="提交" />
                      </td>
                  </tr>
			  </table>
              <input type='hidden' name='id' value="{tags_one.id}"/>
			</form>
          </fieldset>
        </div>
      </div>
    </div>   
    </div>
     </div>
<script>
    function jump()
    {
        window.parent.location.href="goods.php?action=goods_tags_list";
    }
    
</script>
</body>
</html>