      .camera-page .p1th .item-wrap .img-item .txt .box-1 {
        padding: 20% 15px 0px 15px; }
        .camera-page .p1th .item-wrap .img-item .txt .box-1 .lbox .ui-avatar-icon i {
          border: 2px solid #fff; }
        .camera-page .p1th .item-wrap .img-item .txt .box-1 .rbox {
