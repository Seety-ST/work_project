/* ====================== 重置结束 ===================== */
* { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; }
html, body { font-family: 'Microsoft YaHei', 'Verdana', 'SimSun'; }
html { 
    -ms-touch-action: none;
    font-size: 62.5%;  
}
input,select{
    -webkit-appearance:none;
    appearance:none; 
    border-radius: 0; 
}
input[type="submit"],input[type="reset"],input[type="button"],input{-webkit-appearance:none;}

body { 
    background: #f6faf3 url(../images/ll-img-2.jpg) top center no-repeat;
    background-size: 100% auto;
    font-size: 1.2rem;
}

/* content */
.shk-page{
    width: 100%;
    color: #666;
    position:fixed; 
    top:0px; 
    bottom:0px;
    overflow:scroll;
    padding: 0 0 20%;
}
.shk-page::-webkit-scrollbar{
    width: 0px;
    background: #1b1b1b;
}
.shk-page::-webkit-scrollbar-thumb{
    background: #1b1b1b;
}
.shk-page img{
    display: block;
    width: 100%;
}
.shk-page .listItem{
    text-align: center;
}
.shk-page .img-item{
    width: 65%;
    background-color: #fff;
    padding: 2%; 
    margin: 0 auto;
}
.shk-page .text-item{
    color: #35631e;
    text-align: center;
    font-size: 1.2rem;
    width: 68%;
    margin: 0 auto;
    padding: 2.4% 0 4%;
}
.shk-page .btn-item{
    width: 65.46875%;
    margin: 0 auto;
}
.shk-page .btn-item:active{
    opacity: 0.8
}

.mod-download-item{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
}
.mod-download-item img{
    display: block;
    width: 100%;
}
.mod-download-item .btn{
    width: 26.875%;
    position: absolute;
    top: 22.7%;
    right: 5.78125%;
}
.mod-download-item .btn img:active{
    opacity: 0.8;
}





/* ---分辨率--- */
@media screen and (max-width: 768px) and (max-height: 1024px) {
    html { 
        font-size: 133.33%; 
    }   
}
@media screen and (max-width: 621px) and (max-height: 1044px) {
    html { 
        font-size: 107.8125%; 
    } 
}
@media screen and (max-width: 540px) and (max-height: 960px) {
    html { 
        font-size: 93.75%; 
    } 
}
@media screen and (max-width: 414px) and (max-height: 736px){
    html { 
        font-size: 71.875%; 
    }  
}
@media screen and (max-width: 375px) and (max-height: 627px) {
    html { 
        font-size: 65.1%; 
    } 
}
@media screen and (max-width: 360px) and (max-height: 640px) {
    html { 
        font-size: 62.5%; 
    } 
}
@media screen and (max-width: 320px) and (max-height: 568px) {
    html { 
        font-size: 55.56%; 
    }
    .shk-page .text-item{
        width: 77%;
        -webkit-transform:scale(0.88); 
    }
}

