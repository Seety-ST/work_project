/* ====================== 重置结束 ===================== */
* { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; }
html { 
	-ms-touch-action: none;
	font-size: 0.24rem;
}
body{
	background: #030925 url(../images/ll-img-1.jpg) center top no-repeat;
	background-size: 100% auto;
}
html, body { 
	font-family: 'Microsoft YaHei', 'Verdana', 'SimSun';
}
input,select{
	-webkit-appearance:none;
	appearance:none; 
	border-radius: 0; 
}
input[type="submit"],input[type="reset"],input[type="button"],input{-webkit-appearance:none;}

/* download */
.mod-download-bar{
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 1.04rem;
	background: url(../images/ll-img-4.png) center bottom no-repeat;
	background-size: 100% auto;
}
.mod-download-bar .btn{
	width: 1.82rem;
	height: 0.52rem;
	background: url(../images/ll-img-3.png) center bottom no-repeat;
	background-size: 100% auto;
	text-indent: -9999rem;
	float: right;
	margin: 0.27rem 0.68rem 0 0;
}
.mod-download-bar .btn:active{
	opacity: 0.8
}

/* index */
.index-page img{
	display: block;
	width: 100%;
}
.index-page h1.logo-item{
	padding: 0.13rem 0 0.11rem 0.35rem;
}
.index-page h1.logo-item .icon{
	display: block;
	width: 1.24rem;
	height: 0.9rem;
	background: url(../images/ll-img-2.png) center no-repeat;
	background-size: contain;
}
.index-page .con-wrap .img-item{
	width: 4.61rem;
	margin: 0 auto;
	box-sizing: border-box;
	background: #fff;
	border-radius: 0.05rem;
	padding: 0.05rem;
}
.index-page .con-wrap .text-item{
	padding-top: 0.3rem;
	color: #fff;
	font-size: 0.22rem;
	width: 4.7rem;
	margin: 0 auto;
	padding-bottom: 1.4rem;
}
