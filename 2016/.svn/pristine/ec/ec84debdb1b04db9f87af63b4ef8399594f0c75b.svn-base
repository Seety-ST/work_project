/* --焦点图样式-- */
.frame {
	width:1003px;
	height:604px;
	background-color:#000;
	overflow:hidden;
	margin: 0 auto;
	margin-bottom: 37px;
}
.frame .list {
	list-style:none;
	padding:0;
	margin:0;
	width:10000000px;
}
.frame .list li {
	width:1003px;
	height:604px;
	float:left;
	position: relative;
}
.frame #big_list2 {
	height:1000000px;
}
.frame #big_list2 li {
	clear:both;
}
.frame .list li .title{
	width: 923px;
	height: 60px;
	line-height: 60px;
	position: absolute;
	left: 0;
	bottom: 0;
	background: rgba(0,0,0,.7);
	color: #fff;
	font-size: 20px;
	padding: 0 40px;
	font-weight: normal;
}

.l_frame {
	width:925px;
	height:146px;
	overflow:hidden;
	margin: 0 auto;
}
.l_frame .list {
	list-style:none;
	padding:0;
	margin:0;
	width:1000000px;
}
.l_frame .list li {
	float:left;
	width:212px;
	height:146px;
	padding-right: 25px;
	cursor:pointer;
	position: relative;
}
.l_frame .list li .title{
	position: absolute;
	top: 0;
	left: 0;
	display: block;
	width: 212px;
	height: 146px;
	text-align: center;
	font-size: 18px;
	background: rgba(0,0,0,.7);
	font-weight: normal;
}
.l_frame .list .cur .title{
	display: none;
}
.l_frame .list li .title span{
	display: block;
	width: 192px;
	padding: 0 10px;
	position: absolute;
	top: 50%;
	left: 0;
	margin-top: -8%;
}
.index-page .path2 .slide_nav{
