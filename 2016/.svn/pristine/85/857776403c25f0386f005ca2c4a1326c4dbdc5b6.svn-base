body { 
    background-image: url(../images/ll-img-1.png); 
    background-size: 100% auto; 
    background-repeat: no-repeat; 
    background-color: #9fb9a5;
}

/* 简客 */
.jk-page{
    color: #fff;
    padding: 7.6% 0 20%;
}
.jk-page img{
    display: block;
    width: 100%;
}
.jk-page .listItem{
    text-align: center;
    padding-bottom: 6.4%;
}
.jk-page .listItem .info{
    font-size: 130%;
    background-image: url(../images/ll-img-4.png); 
    background-size: 100% 100%; 
    background-repeat: no-repeat; 
    padding: 3.5% 0;
}
.jk-page .img-item{
    padding: 0 15.6%;
    background: url(../images/ll-img-2.png); 
    background-size: 100% auto; 
    background-repeat: no-repeat; 
}
.jk-page .img-item .con-item{
    -webkit-filter: drop-shadow(4px 0px 11px rgba(0,0,0,.1));
}
.jk-page .img-item dl.text-item{
    display: block;
    background-image: url(../images/ll-img-5.jpg); 
    background-size: 100% 100%; 
    background-repeat: no-repeat; 
    padding: 3.87%
}
.jk-page .img-item dl.text-item dt.title{
    font-size: 117.86%;
    font-weight: bold;
    padding-bottom: 2%;
}

.jk-download-item{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #e6f1e9;
}
.jk-download-item img{
    display: block;
    width: 100%;
}
.jk-download-item .btn{
    width: 24.27%;
    position: absolute;
    top: 18%;
    right: 3.6%;
}
.jk-download-item .btn img:active{
    background-image: url(../images/ll-img-7-active.png); 
    background-size: 100% 100%; 
}





