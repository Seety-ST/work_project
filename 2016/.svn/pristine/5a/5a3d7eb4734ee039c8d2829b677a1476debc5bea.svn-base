	<script type="text/javascript">		
		var turnplate={
				prize:[],             //大转盘奖品名称
				startAngle:0,               //开始角度		         
				bRotate:false               //false:停止;ture:旋转
		};
		$(document).ready(function(){
			turnplate.prize = ["照片冲印￥299","时光印￥49.9", "萌系照片夹￥49.9",  "MINI相册￥79.9", "相片树￥169.9", "照片冲印￥299", "时光印￥49.9 ", "萌系照片夹￥49.9", "MINI相册￥79.9", "相片树￥169.9"];
			var rotateTimeOut = function (){
					$('.Disc').rotate({
						angle:0,
						animateTo: 2160,
						duration:8000,
						callback:function (){
							alert('网络超时，请检查您的网络设置！');
						}
					});
			};
			//旋转转盘 item:奖品位置; txt：提示语;
			var rotateFn = function (item, txt,callback){
				var angles = item * (360 / turnplate.prize.length) - (360 / (turnplate.prize.length*2));
				if(angles<36){
					angles = 36 - angles; 
				}else{
					angles = 360 - angles + 36;
				}
				$('.Disc').stopRotate();
				$('.Disc').rotate({
					angle:0,
					animateTo:angles-1800,
					duration:4000,
					callback:function (){
						alert(txt);
						 turnplate.bRotate = !turnplate.bRotate;
					}
				});
			};
			//点击指针事件
			$("#slotMachineButtonFake").click(function(){
				var item = rnd(1,turnplate.prize.length);
				rotateFn(item, turnplate.prize[item-1]);
				console.log(item);	
			});

		});
		function rnd(n, m){
			var random = Math.floor(Math.random()*(m-n+1)+n);
			return random;
			 
		}
