.mod-down-btn .btn{
	border: 1px solid #fff;
	border-radius: 5px;
	display: block;
	width: 55.73%;
	padding: 2% 0;
	margin: 0 auto;
	font-size: 0;
	-webkit-transition: 300ms;
}
.mod-down-btn .btn em{
	font-style: normal;
	font-size: 1.6rem;
	display: inline-block;
	vertical-align: middle;
}
.mod-down-btn .btn .icon{
	display: inline-block;
	vertical-align: middle;
	background-image: url(../images-wap/down-icon-36x40.png);
	background-size: 100% 100%;
	background-repeat: no-repeat;
	width: 18px;
	height: 20px;
	margin-right: 2.8%;
}
.mod-down-btn .btn:active{
	background: #fff;
	color: #bed6c4;
	-webkit-transition: 300ms;
}
.mod-down-btn .btn:active .icon{
	background-image: url(../images-wap/down-icon-active-36x40.png);
	background-size: 100% 100%;
}

/* 内容 */
.jpwx-page{
	text-align: center;
	color: #fff;
	padding-bottom: 3.33%;
}
.jpwx-page img{
	width: 100%;
	display: block;

}
.jpwx-page .jpheader{
	background: url(../images-wap/header-bg-750x456.jpg) center top no-repeat;
	background-size: 100% auto;
}
.jpwx-page .jpheader .text-item{
	padding: 40% 0 7.5%;
}
.jpwx-page .jpheader .text-item h4.title{
	width: 100%;

	font-weight: normal;
}
.jpwx-page .jpheader .text-item .txt{
	padding-top: 2%;
	font-size: 1.3rem;
	line-height: 2;
	color: #f8f8f8;
}
.jpwx-page .con-item{
	padding-bottom: 6.8%;
}
.jpwx-page .mod-down-btn{
	padding-bottom: 10%;
}
.jpwx-page .jpheader .mod-down-btn{
	padding-bottom: 0;
}
.jpwx-page .sy-item{
	color: #fff;
	width: 100%;
	text-align: center;
}





