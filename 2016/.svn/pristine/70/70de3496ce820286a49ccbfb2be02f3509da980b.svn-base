/** 清除内外边距 **/
body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, /* structural elements 结构元素 */
dl, dt, dd, ul, ol, li, /* list elements 列表元素 */
pre, /* text formatting elements 文本格式元素 */
form, fieldset, legend, button, input, textarea, /* form elements 表单元素 */
th, td, /* table elements 表格元素 */
img/* img elements 图片元素 */ { border: medium none; margin: 0; padding: 0; }
/** 设置默认字体 **/
body, button, input, select, textarea { font: 12px/1.5  "SimSun", Tahoma, Arial, sans-serif }
input, select, form img, button { vertical-align: middle; }
h1, h2, h3, h4, h5, h6 { font-size: 100%; }
em { font-style: normal; }
/** 重置列表元素 **/
ul, ol { list-style: none; }
/** 重置超链接元素 **/
a { text-decoration: none; color: #fff; }
a:hover { text-decoration: none }
/** 重置图片元素 **/
img { border: none; }
/** 重置表格元素 **/
table { border-collapse: collapse; border-spacing: 0; }
/** 清楚浮动 **/
.clearfix:after { visibility: hidden; display: block; font-size: 0; content: " "; clear: both; height: 0; }
* html .clearfix { zoom: 1; }
/* IE6 */
*:first-child+html .clearfix { zoom: 1; }
/* IE7 */
textarea, input { resize: none }
a, textarea, input, button { outline: none }
.font_wryh { font-family: '微软雅黑', '黑体', '宋体'; }
/** position **/
.re { position: relative; z-index: 1 }
.fr { float: right; }
.fl { float: left; }
.frdi { float: right; display: inline }
.fldi { float: left; display: inline }
/* ====================== 重置结束 ===================== */
* { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; }
html { 
	-ms-touch-action: none;
	font-size: 62.5%;
}
body{
	background: #adacac;
	font-size: 1.2rem;
}
body.bg-fff{
	background: #fff;
}
body.bg-f0f0f0{
	background: #f0f0f0;
}
html, body { 
	font-family: 'Microsoft YaHei', 'Verdana', 'SimSun';
}
input,select,button{
	-webkit-appearance:none;
	appearance:none; 
	border-radius: 0; 
}
input[type="submit"],input[type="reset"],input[type="button"],input{-webkit-appearance:none;}


/* model */
.mod-tips-item{
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%); 
	width: 100%;
	color: #818181;
	font-size: 1.6rem;
	line-height: 1.5;
	text-align: center;
}
.mod-tips-item span{
	opacity: 0.4;
}
.mod-tips-item .mod-icon{
	display: block;
	margin: 0 auto;
	width: 21.33%;
	height: 0;
	padding-top: 21.33%;
	background-repeat: no-repeat;
	background-size: 100% 100%;
	margin-bottom: 4%;
}
.no-wifi-item .nowifi-icon{
	background-image: url(../images/wifi-icon-160x160.png);
}




/* ---分辨率--- */
@media screen and (max-width: 768px) and (max-height: 1024px) {
	html { 
		font-size: 128%; 
	}
}
@media screen and (max-width: 621px) and (max-height: 1044px) {
	html { 
		font-size: 103.5%; 
	}
}
@media screen and (max-width: 540px) and (max-height: 960px) {
	html { 
		font-size: 90%; 
	} 
}
@media screen and (max-width: 414px) and (max-height: 736px){
	html { 
		font-size: 69%; 
	}
}
@media screen and (max-width: 375px) and (max-height: 627px) {
	html { 
		font-size: 62.5%; 
	}
}
@media screen and (max-width: 360px) and (max-height: 640px) {
	html { 
		font-size: 60%; 
	}
}
@media screen and (max-width: 320px) and (max-height: 568px) {
	html { 
		font-size: 53.33%; 
	}
}
