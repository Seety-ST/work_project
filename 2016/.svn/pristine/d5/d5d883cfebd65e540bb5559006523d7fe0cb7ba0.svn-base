<script type="text/javascript" src="js/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="js/iSlider.js"></script> 

<script>
	var myslider=new iSlider({
		wrap:'#wrap',
		item:'.item',
		onslide:function (index) {
			console.info(index);
			var audiorestore = $("#audio-restore")[0];
			var audiobig = $("#audio-big")[0];
			$(".restore-item").on("click",function(){
				audiorestore.play();	//播放
				$(".play .mod-animation").show().delay(2000).hide(0);	
				$(".play .img-change .cur").delay(600).fadeIn("slow");
				$(".play .btn-item").hide();
				$(".play .arrow").show();				
			});
			$(".largen-item").on("click",function(){
				audiobig.play();	//播放
				$(".play .mod-animation").show().delay(2000).hide(0);	
				$(".play .img-change .cur").delay(600).fadeIn("slow");
				$(".play .btn-item").hide();
				$(".play .arrow").show();				
			});
		},
		loadingImgs:[
			'images/user-img/change/1.jpg',
			'images/user-img/normal/1.jpg',
			'images/user-img/change/2.jpg',
			'images/user-img/normal/2.jpg',
			'images/user-img/change/3.jpg',
			'images/user-img/normal/3.jpg',
			'images/user-img/change/4.jpg',
			'images/user-img/normal/4.jpg',
			'images/user-img/change/5.jpg',
			'images/user-img/normal/5.jpg',
			'images/user-img/change/6.jpg',
			'images/user-img/normal/6.jpg',
			'images/user-img/change/7.jpg',
			'images/user-img/normal/7.jpg',
			'images/user-img/change/8.jpg',
			'images/user-img/normal/8.jpg'
		],
		onloading:function (complete,total) {
		    this.$('#progress_bg').style.width=complete/total*100+'%';
		    if (complete==total) {
		        this.$('#loading').style.display="none"
		    }
		}
	});
</script>
