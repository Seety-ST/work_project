body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td{margin:0;padding:0}
article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section{display:block}
fieldset,img{border:0}
table{border-collapse:collapse;border-spacing:0}
li{list-style:none}
a,a:hover{text-decoration:none;color:#b31012;}
a, textarea, input, button { outline: none }

/** 清楚浮动 **/
.clearfix:after { visibility: hidden; display: block; font-size: 0; content: " "; clear: both; height: 0; }
* html .clearfix { zoom: 1; }

* { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; }
html{
    -ms-touch-action: none;
}
html,body{ height: 100%;}

input,select,button{
    -webkit-appearance:none;
    appearance:none; 
    border-radius: 0; 
}

input[type="submit"],
input[type="reset"],
input[type="button"],
input{
    -webkit-appearance:none;
}

.wrap{
    position:relative;
    color:#fff; 
    height: 100%; 
    overflow: hidden;
}

body{
    background-color: #b31012;
    font-size: 0.24rem;
    font-family: 'Microsoft YaHei', 'Verdana', 'SimSun';
}

#indexpage {
    overflow: hidden;
}
.page {
    display: none;
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    background-repeat: no-repeat;  
    background-size:cover;
    background-position: center top;
    color: #fff;
}
.contain {
    width: 100%;
    height: 100%;
    display: none;
    position: relative;
    z-index: 0;
}
.current .contain,.slide .contain {
    display: block;
}
.current {
    display: block;
    z-index: 1;
}
.slide {
    display: block;
    z-index: 2;
}
.swipe {
    display: block;
    z-index: 3;
    transition-duration: 0ms !important;
    -webkit-transition-duration: 0ms !important;
}

.fade{
    background: rgba(0,0,0,.8);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
}






.index-page .item, 
.index-page .item .box {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.index-page .item img{
    width: 100%;
    display: block;
}



.mod-arrow{
    position: fixed;
    bottom: 0.1rem;
    left: 50%;
    margin-left: -0.6rem;
    -webkit-animation: slide_up 2s infinite ease-out;
}
.mod-arrow .down-icon{
    display: block;
    margin: 0 auto 0.06rem;
    background: url(../images/ll-img-4.png);
    background-size: contain;
    width: 0.59rem;
    height: 0.38rem;
}
.mod-arrow em{
    display: block;
    font-style: normal;
    font-size: 0.2rem;
}



/* content */
/* 作品页 */
.index-page .show-page {
    height: 100%;
    background: url(../images/ll-img-1.jpg) center top no-repeat;
    background-size: 100% auto;
    padding-top: 0.34rem;
    box-sizing: border-box;
}
.index-page .show-page .listItem{
    width: 4.02rem;
    height: 0.29rem;
    padding-bottom: 0.37rem;
    margin: 0 auto;
    background: url(../images/ll-img-2.png) center top no-repeat;
    background-size: 100% auto;
    -webkit-animation: fade_down 0.6s linear;
}
.index-page .show-page .img-item{
    padding: 0 1.19rem;
    -webkit-animation: fadeIn 0.6s 0.5s both;
}
.index-page .show-page .btn-wrap{
    padding: 0.11rem 1.19rem 0.25rem;
}
.index-page .show-page .btn-wrap .btn-item{
    width: 49%;
    height: 0.62rem;
    line-height: 0.62rem;
    text-align: center;
    border: 1px solid #fff;
    box-sizing: border-box;
    -webkit-transition: 600ms;
}
.index-page .show-page .btn-wrap .btn-item:active{
    opacity: 0.8;
}
.index-page .show-page .btn-wrap .like-btn{
    background: #fff;
    float: left;
    -webkit-animation: fadeInLeft 1s 1s both;
}
.index-page .show-page .btn-wrap .like-btn .icon{
    display: inline-block;
    background-repeat: no-repeat;
    background-size: contain;
}
.index-page .show-page .btn-wrap .like-btn .like-icon{
    width: 0.25rem;
    height: 0.2rem;
    background-image: url(../images/ll-img-3.png);
}
.index-page .show-page .btn-wrap .join-btn{
    color: #fff;
    float: right;
    -webkit-animation: fadeInRight 1s 1s both;
}
.index-page .show-page .text-item{
    text-align: center;
    font-size: 0.2rem;
    -webkit-animation: fade_down 1.2s 1s both;
}
.index-page .show-page .text-item dt{
    font-size: 0.24rem;
    padding-bottom: 0.15rem;
}


/* 产品页 */
.product-page{
    background: url(../images/ll-img-5.jpg) center bottom no-repeat;
    background-size: 100% auto;
    box-sizing: border-box;
    height: 100%;
    padding-top: 0.32rem;
    position: relative;
}
.product-page .listItem{
    width: 5.8rem;
    height: 0.68rem;
    margin: 0 auto;
    background: url(../images/ll-img-6.png) center top no-repeat;
    background-size: 100% auto;
    -webkit-animation: fade_down 1.2s 1s both;
}
.product-page .list{
    padding: 0.27rem 0.3rem 0.05rem;
    -webkit-animation: fade_down 1s 1.2s both;
}
.product-page .list li{
    float: left;
    width: 1.82rem;
    height: 3.8rem;
    padding: 0 0.17rem 0 0;
    text-align: center;
    font-size: 0.22rem;
}
.product-page .list li:nth-child(3n){
