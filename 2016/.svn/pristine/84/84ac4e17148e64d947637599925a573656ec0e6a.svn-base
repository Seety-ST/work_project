}
.product-page .list .num-item{
    display: block;
    margin: 0 auto;
    background: url(../images/ll-img-7.png) no-repeat;
    background-size: contain;
    width: 0.76rem;
    height: 0.38rem;
    margin-bottom: 0.07rem;
}
.product-page .list .num-item .num{
    display: block;
    margin: 0 auto;
    background-repeat: no-repeat;
    background-size: contain;
    width: 0.76rem;
    height: 0.38rem;
}
.product-page .list li.item-1 .num{
    background-image: url(../images/num-img/1.png);
}
.product-page .list li.item-2 .num{
    background-image: url(../images/num-img/2.png);
}
.product-page .list li.item-3 .num{
    background-image: url(../images/num-img/3.png);
}
.product-page .list li.item-4 .num{
    background-image: url(../images/num-img/4.png);
}
.product-page .list li.item-5 .num{
    background-image: url(../images/num-img/5.png);
}
.product-page .list li.item-6 .num{
    background-image: url(../images/num-img/6.png);
}
.product-page .list .text-item{
    background: #fff;
    height: 0.37rem;
    line-height: 0.37rem;
    color: #b31012;
    margin-bottom: 0.05rem;
}
.product-page .more-btn{
    -webkit-animation: fadeInUp 1s 1s both;
}
.product-page .more-btn a.btn{
    display: block;
    width: 4.07rem;
    height: 0.67rem;
    line-height: 0.67rem;
    margin: 0 auto;
    background: #fff;
    color: #b31012;
    text-align: center;
    -webkit-transition: 600ms;
}
.product-page .more-btn a.btn:active{
    opacity: 0.5;
}


/* share pop */
.mod-pop{
    position: fixed;
    top: 50%;
    left: 50%;
    width: 4.44rem;
    height: 2.41rem;
    margin: -1.21rem 0 0 -2.22rem;
    background: url(../images/ll-img-12.png) center top no-repeat;
    background-size: contain;
    z-index: 4;
}
.mod-pop .text-item{
    padding: 0.8rem 0 0.3rem 0.1rem;
    font-size: 0.32rem;
    color: #fff;
    text-align: center;
}
.mod-pop .btn-item .btn{
    display: block;
    margin: 0 auto;
    border: 1px solid #fff;
    color: #fff;
    font-size: 0.18rem;
    width: 1.34rem;
    height: 0.34rem;
    line-height: 0.34rem;
    text-align: center;
}
.mod-pop .btn-item .btn:active{
    opacity: 0.5;
    -webkit-transition: 600ms;
}


