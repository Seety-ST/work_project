/* common */

.animated {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}

/*  header */
.header{
	position: fixed;
	top: 0;
	right: 5.625%;
	width: 88.75%;
	color: #5c5c5c;
	min-width: 1024px;
}
.header img{
	width: 100%;
}
.header h1.logo{
	width: 8.5%;
	float: right;
}
.header .mod-nav-bar{
	float: right;
	width: 88%;
	padding: 0 2.58% 0 0;
	font-size: 20px;
}
.header .nav-btn-warp{
	float: right;
	width: 1280px;
	text-align: right;
	margin:0px 40px 0px 0px;
}
.header .nav-btn-warp .more-btn{
	float: right;
	width: 130px;
	padding: 2.5% 0 0;
	-moz-transition: all 600ms ease;
	-ms-transition: all 600ms ease;
	-o-transition: all 600ms ease;
	-webkit-transition: all 600ms ease;
	transition: all 600ms ease;
	cursor: pointer;
	display: block;
	opacity: 1;
	margin-right: 0;
	filter:alpha(opacity=100);
}
.header .nav-btn-warp .more-btn:hover{
	opacity: 0.7;
	filter:alpha(opacity=70);
}
.header .nav-btn-warp .more-btn span{
	float: right;
	padding: 0 15px 0 0;
}
.header .nav-btn-warp .more-btn .icon{
	float: right;
	font-size: 26px;
	font-weight: 800;
}
.header .nav{
	display: none;
	opacity: 0;
	filter:alpha(opacity=0);
	float: right;
	margin-right: 0;
	padding: 2.2% 0 0 0 ;
}
.header .nav li{
	float: left;
	padding-left:44px;
}
.header .nav .n-line{
	display: block;
	margin: 0 auto;
	width: 100%;
	height: 2px;
	background:none; 
	margin-top: 4px;
}
.header .nav  li a:hover{
	text-decoration: none;
}
.header .nav  li a:hover .n-line{
	background-color: #171717; 
	animation:navcur 0.3s forwards linear;
	-webkit-animation:navcur 0.3s forwards linear;
}
.header .nav  li.active a .n-line,
.header .nav  li.active a:hover .n-line{
	background-color: #171717; 
	animation:navcur 0s forwards linear;
	-webkit-animation:navcur 0s forwards linear; 
}





/* footer */
.footer{ 
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	text-align: center;
	padding: 1.2% 0 1%;
	font-size: 12px;
	color: #adadad;
	z-index: 3;
}
.footer .footer-nav{
	font-size: 14px;
	padding-bottom: 5px;
}
.footer .footer-nav a{
	margin: 0 34px;
}

/* animation */
@-webkit-keyframes navcur 
{
	0%{
	    -webkit-transfor:scale(0,0);
	}
	100%{
	    -webkit-transfor:scale(1,1);
	}
}
@keyframes navcur 
{
	0%{
	    transform:scale(0,0);
	}
	100%{
	    transform:scale(1,1);
	}
}


/*mod-nav-header*/
