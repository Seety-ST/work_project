/** 清除内外边距 **/
body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, /* structural elements 结构元素 */
dl, dt, dd, ul, ol, li, /* list elements 列表元素 */
pre, /* text formatting elements 文本格式元素 */
form, fieldset, legend, button, input, textarea, /* form elements 表单元素 */
th, td, /* table elements 表格元素 */
img/* img elements 图片元素 */ { border: medium none; margin: 0; padding: 0; }
/** 设置默认字体 **/
body, button, input, select, textarea { font: 12px/1.5  "SimSun", Tahoma, Arial, sans-serif }
input, select, form img, button { vertical-align: middle; }
h1, h2, h3, h4, h5, h6 { font-size: 100%; }
em { font-style: normal; }
/** 重置列表元素 **/
ul, ol { list-style: none; }
/** 重置超链接元素 **/
a { text-decoration: none; color: #aaa; }
a:hover { text-decoration: none }
/** 重置图片元素 **/
img { border: none; }
/** 重置表格元素 **/
table { border-collapse: collapse; border-spacing: 0; }
/** 清楚浮动 **/
.clearfix:after { visibility: hidden; display: block; font-size: 0; content: " "; clear: both; height: 0; }
* html .clearfix { zoom: 1; }
/* IE6 */
*:first-child+html .clearfix { zoom: 1; }
/* IE7 */
textarea, input { resize: none }
a, textarea, input, button { outline: none }
.font_wryh { font-family: '微软雅黑', '黑体', '宋体'; }
/** position **/
.re { position: relative; z-index: 1 }
.fr { float: right; }
.fl { float: left; }
.frdi { float: right; display: inline }
.fldi { float: left; display: inline }
/* ====================== 重置结束 ===================== */
* { -webkit-tap-highlight-color: transparent; -webkit-appearance: none; }
html { 
	-ms-touch-action: none;
	font-size: 100px;
}
body{
	background: #1a1631;
	color: #fff;
	font-size: 0.12rem;
}
html, body { 
	font-family: 'Microsoft YaHei', 'Verdana', 'SimSun';
}
input,select,button{
	-webkit-appearance:none;
	appearance:none; 
	border-radius: 0; 
}
input[type="submit"],input[type="reset"],input[type="button"],input,button{-webkit-appearance:none;}

/* content */
.animated{
	-webkit-animation-duration:1s;
	animation-duration:1s;
	-webkit-animation-fill-mode:both;
	animation-fill-mode:both
}
.wlk-page{
	width: 6.4rem;
	overflow: hidden;
	position: relative;
}
.wlk-page .bg-item{
	width: 100%;
	height: 8.82rem;
	background: url(../images/bg-img-640x882.jpg) no-repeat;
	background-size: contain;
	-webkit-animation: wlkBackground 0.8s ease;
}
.wlk-page h1.logo-item{
	position: absolute;
	top: 0.12rem;
	left: 0.13rem;
	width: 1.44rem;
	height: 0.37rem;
	display: block;
	background: url(../images/logo-144x37.png) no-repeat;
	background-size: contain;
	-webkit-animation: flipInY 0.7s both 0.7s;

}
.wlk-page .light-item{
	position: absolute;
	top: 3.63rem;
	left: 3.73rem;
	width: 3.14rem;
	height: 2.26rem;
	background: url(../images/light-img-314x226.png) no-repeat;
	background-size: contain;
	-webkit-animation: rotateInDownRight 0.5s both 0.4s;
}
.wlk-page .more-item{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 0.6rem;
	color: #78fcff;
	font-size: 0.24rem;
	text-shadow: 0 0 4px rgba(6,206,206,.5), 0 0 7px rgba(6,206,206,.5), 0 0 8px rgba(6,206,206,.5), 0 0 10px rgba(6,206,206,.5), 0 0 15px rgba(6,206,206,.5);
	-webkit-animation: fadeIn 0.5s both 1.2s;
	text-align: center;
}
.wlk-page .more-item .bar-bg{
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100%;
	background-color: #1a1631;
}
.wlk-page .more-item .text-item{
	-webkit-animation: breath 0.8s infinite linear 2s;
	padding-top: 0.1rem;
	letter-spacing: 0.05rem;

}
.wlk-page .more-item .text-item span{
	position: relative;
}
.wlk-page .more-item .text-item span:after {
	content: ".";
	display: block;
	font-size: 0.36rem;
	position: absolute;
	top: 0;
	left: 50%;
	-webkit-transform:translate(-50%,0);
}

/* animation */
@-webkit-keyframes wlkBackground {
	0% {
		opacity: 0;
		-webkit-transform: scale(1.1,1.1);
	}
	100% {
		opacity: 1;
		-webkit-transform: scale(1,1);
	}
}
@-webkit-keyframes breath {
	0%, 100% { 
		opacity: 0.5;
	}
	50%  { 
		opacity:   1; 
	}
}
@-webkit-keyframes fadeIn {
	0% {
		opacity: 0;
	}
	100% {
		opacity: 1;
	}
}
@-webkit-keyframes flipInY{
	0%{
		-webkit-transform:perspective(400px) rotate3d(0,1,0,90deg);
		-webkit-animation-timing-function:ease-in;
		opacity:0
	}
	40%{
		-webkit-transform:perspective(400px) rotate3d(0,1,0,-20deg);
		-webkit-animation-timing-function:ease-in;
	}
	60%{
		-webkit-transform:perspective(400px) rotate3d(0,1,0,10deg);
		;opacity:1
	}
	80%{
		-webkit-transform:perspective(400px) rotate3d(0,1,0,-5deg);
	}
	100%{
		-webkit-transform:perspective(400px);
	}
}
@-webkit-keyframes rotateInDownRight{
	0%{
		-webkit-transform-origin:right bottom;
		transform-origin:right bottom;
		-webkit-transform:rotate3d(0,0,1,45deg);
		transform:rotate3d(0,0,1,45deg);
		opacity:0
	}
	70%{
		-webkit-transform-origin:right bottom;
		transform-origin:right bottom;
		-webkit-transform:rotate3d(0,0,1,-5deg);
		transform:rotate3d(0,0,1,-5deg);
		opacity:1
	}
	80%{
		-webkit-transform-origin:right bottom;
		transform-origin:right bottom;
		-webkit-transform:none;
		transform:none;
	}
}