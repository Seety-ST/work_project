/* INTERPHOTO */
.yinxiang-page{
    width: 100%;
    color: #666;
    position:fixed; 
    top:0px; 
    bottom:0px;
    overflow:scroll;
    padding: 5% 0 15%;
}
.yinxiang-page .page-warp{
    max-width: 640px;
    margin: 0 auto;
    display: table;
    width: 100%;
    height: 100%;
}
.yinxiang-page .page-warp .content{
    width: 100%;
    height: 100%;
    display: table-cell;
    vertical-align: middle;
}
.yinxiang-page::-webkit-scrollbar{
    width: 0px;
    background: #1b1b1b;
}
.yinxiang-page::-webkit-scrollbar-thumb{
    background: #1b1b1b;
}
.yinxiang-page img{
    display: block;
    width: 100%;
}
.yinxiang-page .listItem{
    text-align: center;
    padding-bottom: 10%;
}
.yinxiang-page .img-item{
    width: 69.33%;
    padding: 0 1.7333% 1.7333% 0;
    background: url(../images/ll-img-2.jpg); 
    background-size: 100% 100%; 
    background-repeat: no-repeat; 
    margin: 0 auto;
    box-shadow: 2px 0px 13px rgba(0,0,0,.1);
}
.yinxiang-page .img-item .con-item{
    width: 100%;
    background: #fff;
}
.yinxiang-page .img-item dl.text-item{
    display: block;
    padding: 2.67%;
    font-size: 1.2rem
}
.yinxiang-page .img-item dl.text-item dt.title{
    font-size: 1.6rem;
    color: #ffc433;
    padding-bottom: 1%;
}

.mod-download-item{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: rgba(0,0,0,.2);
}
.mod-download-item img{
    display: block;
    width: 100%;
}
.mod-download-item .btn{
    width: 24.27%;
    position: absolute;
    top: 18%;
    right: 3.6%;
}
.mod-download-item .btn img:active{
    opacity: 0.8;
}





