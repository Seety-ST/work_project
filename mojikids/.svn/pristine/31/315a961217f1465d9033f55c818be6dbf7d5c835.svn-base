@import "../sass/compass";


.native-scroll{
  overflow: auto !important;
  -webkit-overflow-scrolling: touch !important;
}

/*列表头部角标*/
.ui-list-item-tips {
    display: block;
    position: absolute;
    left: -8px;
    top: 0px;
    width: 32px;
    height: 16px;
    background-color: #ff6a6e;
    color: #fff;
    text-align: center;
    line-height: 16px;
    font-size: 10px;
    border-radius: 2px;
    z-index: 7;

    .ui-list-item-tips-triangle {
        z-index: 2;
        width: 0;
        height: 0;
        border-top: 8px solid #e25357;
        border-left: 8px solid transparent;
        position: absolute;
        top: 15px;
        left: 0;
    }
}

/*列表icon遮罩*/
.ui-list-item-fade {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    background-color: rgba(0, 0, 0, 0.5);
    -webkit-box-pack: center;
    box-pack: center;
    display: -webkit-box;
    display: box;
    -webkit-box-align: center;
    box-align: center;


}


// 底部bar css
.global-footer-bar-item{
    width:100%;
    background-color: #fffdfb;
    position:fixed;
    left:0;
    bottom:0;
    z-index: 1;
    .item-wrap{
        padding:6px 15px 4px 15px;
            .list{
                display:-webkit-box;
                a{
                    -webkit-box-flex:1;
                    display:block;
                }
                li{
                 
                    .footer-icon{
                        width:27px;
                        height:27px;
                        display:block;
                        margin: 0 auto;
                        background-position: center;
                        background-size: cover;
                        background-repeat: no-repeat;

                    }
                    .footer-index-icon{
                        background-image: url(../image/index/index-icon.png?__inline);
                    }
                    .footer-order-icon{
                        background-image: url(../image/index/order-icon.png?__inline);
                    }
                    .footer-mine-icon{
                        background-image: url(../image/index/mine-icon.png?__inline);
                    }
                    &.cur{
                        .footer-txt{
                            color:#000;
                        }
                        .footer-index-icon{
                            background-image: url(../image/index/index-icon-cur.png?__inline);
                        }
                        .footer-order-icon{
                            background-image: url(../image/index/order-icon-cur.png?__inline);
                        }
                        .footer-mine-icon{
                            background-image: url(../image/index/mine-icon-cur.png?__inline);
                        }
                    }

                }
            }
        }
    }

