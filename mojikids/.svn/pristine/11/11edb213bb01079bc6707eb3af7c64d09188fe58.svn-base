html,body{
  width: 100%;
  height: 100%;
  //overflow: auto;
  word-wrap: break-word;
}
body{
  //overflow: auto !important;
  //-webkit-overflow-scrolling: touch !important;
  background-color: #faf8f8;
  max-width: 768px;
  margin:0 auto;
}
main[role="main"]{
  width: 100%;
  height: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-box-pack: justify;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;


}
main[role="main"]>div{
  -webkit-box-flex: 1;
  box-flex: 1;
}

.page-view{
  height: 100%;

  position: relative;
}
/**
 * common class
 */
.w-100{
  width: 100%;
}
.h-100{
  height: 100%;
}

.fn-hide{
  display: none !important;
}
.fn-hidden{
  visibility: hidden !important;
}


.wap-old-icon{
  display: inline-block;
  &:before{
    content: '';
    vertical-align: top;
    line-height: 1; // 修复inline-block带来的空格bug
    background-repeat: no-repeat;
  }
}

.line-through{
  text-decoration:line-through;
}

.image-img
{

  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;

  -webkit-background-size: 100% auto;
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-position: 50%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fafafa;

  &:before
  {
    position: absolute;
    top: 50%;
    left: 50%;
    display: block;
    width: 60px;
    height: 16px;

    background-repeat: no-repeat;
    background-image: url('../image/avatar-error-min.png');
    background-size: cover;
    content:'';
    margin-top: -8px;
    margin-left: -30px;

  }

  // 重新加载
  &.refresh
  {
    &:before
    {
      //@include get-icon-base;
    }
    //@include get-icon('refresh-60x60');

    &:active
    {
      //@include get-icon('refresh-60x60-active');
    }
  }

  // 重新加载ing
  &.reload
  {
    &:before {
      //@include get-icon-base;
      //@include animation(loading-rotate 2s linear infinite);
    }
    &, &:active {
      //@include get-icon('loading-60x60');
    }
  }

  // 加载完成
  &.loaded
  {
    &:before {
      display: none;
    }
  }

  // 加载失败
  &.error
  {
    min-height: 150px;
    &:before {
      position: absolute;
      top: 50%;
      left: 50%;
      display: block;
      width: 50px;
      height: 50px;

      background-repeat: no-repeat;
      background-image: url('../image/img_error_min_100x100.png');
      background-size: cover;
      content:'';
      margin-top: -25px;
      margin-left: -24px;
    }
    //@include get-icon('img-error-60x60');
  }
}
