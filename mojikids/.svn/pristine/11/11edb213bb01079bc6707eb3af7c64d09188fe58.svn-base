div{
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-appearance: none;
}
p{
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-appearance: none;
    word-break: break-all;
}

.fade{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
    background-color:rgba(0,0,0,0.5);
    -webkit-box-pack: center;
    box-pack: center;
    display: -webkit-box;
    display: box;
    -webkit-box-align: center;
    box-align: center;

}
#global-header{
  background-color: #fafafa;
  height: 45px;
  &:after{
      width: 43px;
      height: 21px;
      background-size: 43px 21px;
      left: 50%;
      top: 12px;
      margin-left: -23px;
      position: absolute;
      content:'';
  }

}

.main-top{
