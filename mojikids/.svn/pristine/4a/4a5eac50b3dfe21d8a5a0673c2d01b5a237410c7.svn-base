@import "../../sass/compass";
.detail-page {
    padding-bottom: 65px;
    .p1th{
        padding: 15px 25px 10px 25px;
        background-color: #ffc430;
        .wbox{
            @include flexbox((
                display: box,  // 盒子模型 子元素默认水平左对齐
                box-pack: justify,  // 水平居中方式  start | center | end | justify
                box-flex: 1 //占有空间比例
            ));
            color: #ffe8b0;
            .p1{
                color: #fff;
                font-size: 16px;
                font-weight: bold;
                padding: 0px 0 5px 0;
            }
            .p2{
                line-height: 24px;
            }
            .cor{
                font-weight: bold;
                color: #fff;
            }
            .lbox{
                @include flexbox((
                    box-flex: 1 //占有空间比例

                ));
            }
            .rbox{
                padding-top: 5px;
                width: 84px;
                img{
                    width: 84px
                }
            }
        }
    }

    .p2th{
        background-color: #fff;
        font-size: 14px;
        .item-wrap{
            .item{
                @include flexbox((
                    display: box,  // 盒子模型 子元素默认水平左对齐
                    box-pack: justify  // 水平居中方式  start | center | end | justify
                    
                ));
                font-size: 14px;
                color: #666;
                padding: 15px 20px 15px 20px;

                .lbox{
                    @include flexbox((
                        box-flex: 1 //占有空间比例
                    ));
                    width: 100%;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;   

                }


                // border-bottom: 1px solid #000;
                .icon{
                    width:16px;
                    height:16px;
                    background-size: cover;
                    display: inline-block;
                    vertical-align: -3px;
                    margin-right: 7px;
                }
                .home{

                    background-image: url(/image/order/icon-home.png);
                }
                .place{

                    background-image: url(/image/order/icon-place.png);
                }
                .phone{

                    background-image: url(/image/order/icon-phone.png);
                }
            }
        }
    }
    .p3th{
        margin-top: 10px;
        background-color: #fff;
        font-size: 14px;
        .item-wrap{
            .item{
                // border-bottom: 1px solid #000;
                @include flexbox((
                    display: box,  // 盒子模型 子元素默认水平左对齐
                    box-pack: justify  // 水平居中方式  start | center | end | justify
                    
                ));
                font-size: 14px;
                color: #666;
                padding: 15px 20px;
            }
        }
    }


    .p4th{
        margin-top: 10px;
        background-color: #fff;
        font-size: 14px;
        .item{
            // border-bottom: 1px solid #000;
            padding: 15px 15px 15px 15px;
        }
        .item-line{
            @include flexbox((
                display: box,  // 盒子模型 子元素默认水平左对齐
                box-pack: justify,  // 水平居中方式  start | center | end | justify

                box-flex: 1 //占有空间比例
            ));
        }
        .wbox1{
            @include flexbox((
                display: box,  // 盒子模型 子元素默认水平左对齐
                box-pack: justify,  // 水平居中方式  start | center | end | justify
               
                box-flex: 1 //占有空间比例
            ));
            .lbox{
                img{
                    width: 80px;
                    display: block;
                }

            }
            .cbox{
                padding: 0px 15px 0 15px;
                @include flexbox((
                 
                    box-flex: 1 //占有空间比例
                ));
                .p1{
                    padding-top: 5px;
                }
                .p2{
                    padding-top: 5px;
                }
            }
            .rbox{

            }
        }
        
    }

    .p5th{

        .title{
            font-size: 12px;
            padding: 20px 15px 10px 15px;
        }
        .wbox{
            background-color: #fff;
            @include flexbox((
                display: box,  // 盒子模型 子元素默认水平左对齐
                box-pack: justify,  // 水平居中方式  start | center | end | justify
                box-flex: 1 //占有空间比例
            ));
            padding: 15px;
        }
    }

    .p6th{
        margin-top: 10px;
        .title{
            font-size: 12px;
            padding: 20px 15px 10px 15px;
        }
        .wbox{
            background-color: #fff;
            padding: 15px;
            font-size: 14px;
            color: #aaa;
            line-height: 28px;
        }
    }



    .submit{

        position: fixed;
        left: 0;
        bottom:0;
        width: 100%;
        text-align: center;
        font-size: 16px;
        color: #fff;
        background-color: #ffc430;
        height:50px;
        line-height: 50px;
        z-index: 1
    }
    
}