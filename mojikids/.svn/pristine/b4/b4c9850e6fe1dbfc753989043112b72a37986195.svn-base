@import "../../sass/compass";

.ui-line-item-mod {
	.item {
		padding: 0px 15px;
		border-bottom: 1px solid #d2d2d2; /*no*/
		background-color: #fff;
		position: relative;
		display: -webkit-box;

		.icon {
			width: 20px;
			height: 20px;
			display: block;
			margin-top: 12px;
			margin-right: 10px;
			background-size: 100% 100%;
			background-position: center center;
		}
		.txt {
			line-height: 45px;
			font-size: 14px;
		}
		.txt-color-grey {
			color: #333;
		}
		.icon-allow-grey {
			position: absolute;
			right: 15px;
			top: 17px;
		}
	}
	.item-arrow-bottom {
		.icon-allow-grey {
			@include transform(rotate(90deg));
		}
	}
}


/* 输入框规范 */
.ui-input-info-mod {
