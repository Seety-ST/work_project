.ui-switch-bar {
	width: 52px;
	height: 32px;

	input {
		width: 52px;
		height: 32px;
		// position: absolute;
		position:  relative;
		z-index: 10;
		border: 0;
		background: 0 0;
		-webkit-appearance: none;
		outline: 0;

		&:before {
			content: '';
			width: 50px;
			height: 30px;
			border: 1px solid #dfdfdf; /*no*/
			background-color: #fdfdfd;
			border-radius: 20px;
			cursor: pointer;
			display: inline-block;
			position: relative;
			vertical-align: middle;
			-webkit-user-select: none;
			user-select: none;
			-webkit-box-sizing: content-box;
			box-sizing: content-box;
			border-color: #dfdfdf;
			-webkit-box-shadow: #dfdfdf 0 0 0 0 inset;
			box-shadow: #dfdfdf 0 0 0 0 inset;
			-webkit-transition: border .4s, -webkit-box-shadow .4s;
			transition: border .4s, box-shadow .4s;
			-webkit-background-clip: content-box;
			background-clip: content-box;
		}
		&:checked:before {
			border-color: #555555;
			-webkit-box-shadow: #555555 0 0 0 16px inset;
			box-shadow: #555555 0 0 0 16px inset;
			background-color: #555555;
			transition: border .4s, box-shadow .4s, background-color 1.2s;
			-webkit-transition: border .4s, -webkit-box-shadow .4s, background-color 1.2s;
			background-color: #555555;
		}
		&:after {
			content: '';
			width: 30px;
			height: 30px;
			position: absolute;
			top: 1px;
			left: 0;
			border-radius: 100%;
			background-color: #fff;
			-webkit-box-shadow: 0 1px 3px rgba(0, 0, 0, .4);
			box-shadow: 0 1px 3px rgba(0, 0, 0, .4);
			-webkit-transition: left .2s;
			transition: left .2s;
		}
		&:checked:after {
			left: 21px;
		}
	}
}
