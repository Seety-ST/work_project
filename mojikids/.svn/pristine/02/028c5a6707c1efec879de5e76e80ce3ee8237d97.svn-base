.mine-page{
	.p1th{
		.item-wrap{
			padding:15px;
			.txt-item{
				margin-left: 10px;
			}
			.ui-avatar-icon{
				i{
					background-position: center;
					background-repeat: no-repeat;
					background-size: contain;
					background-image: url(../../image/mine/user-img-defalut.png);
				}
			}
		}
	}
	.p2th{
		.item-wrap{
			.title-item{
				margin-top: 12px;
				.arrow-icon{
					width: 16px;
					height: 16px;
					display: inline-block;
					background: url(../../image/mine/arrow-icon-32x32.png?__inline) no-repeat center;
					background-size: contain;
					margin-left: 4px;
					vertical-align: middle;
				}
				.text{
					display:inline-block;
					vertical-align: middle;
				}
			}
			.content{
				.no-data-item{
					width:295px;
					height:140px;
					margin:15px auto;
					border-radius: 8px;
					box-shadow: 0 0 0.15rem rgba(0, 0, 0, 0.15);
					background: url(../../image/mine/no-data-bg-120x120.jpg) no-repeat 220px bottom;
					background-size: 60px 60px;
					.add-btn-icon{
						width:60px;
						height:60px;
						display:block;
						margin:0px auto;
						padding-top: 25px;
						background: url(../../image/mine/add-btn-114x114.png) no-repeat center bottom;
						background-size:contain;
					}
					.text{
						padding-top: 15px;
					}
				}
				.baby-list-item{
					overflow-x:auto;
					.list{
						padding-left: 40px;
						display:-webkit-box;
						li{
							width:295px;
							height:140px;
							overflow:hidden;
							position:relative;
							border-radius: 8px;
							box-shadow: 0 0 0.15rem rgba(0, 0, 0, 0.15);
							margin:15px 15px 15px 0px;

							.ui-avatar-icon{
								margin:15px auto 0px;
								i{
									background-size: 100%;
									background-repeat: no-repeat;
									background-position: center;
								}
							}
							.txt-item{
								.box-1{
									padding-top: 10px;
								}
								.box-2{
									padding-top: 4px;
								}
							}
							
							.girl-bg-1{
								background:url(../../image/mine/bg-1-64x64.png?__inline) no-repeat center;
							}
							.girl-bg-2{
								background:url(../../image/mine/bg-2-64x64.png?__inline) no-repeat center;
							}
							.boy-bg-1{
								background:url(../../image/mine/boy-bg-1.png?__inline) no-repeat center;
								
							}
							.boy-bg-2{
								background:url(../../image/mine/boy-bg-2.png?__inline) no-repeat center;
							}
							.li-bg-1{
								
								background-size: cover;
								position: absolute;
								left:10px;
								top:10px;
							}
							.li-bg-2{
								
								background-size: cover;
								position: absolute;
								right:10px;
								bottom:10px;
							}
							
						}
						li:nth-last-child(1){
							margin-right: 0px;
						}
					}
				}
			}
			
		}
	}
	.p3th{
		.item-wrap{
			.ui-edit-user-info-mod{
				.user-info-item{
					.lbox{
						.tips{
							margin-left: 0px;
						}
					}
				} 
			}
		}
	}
}

