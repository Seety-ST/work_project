.index-page {
  padding: 0.15rem 0.18rem;
}

.index-page .p1th {
  padding-top: 0.05rem;
}

.index-page .p1th .item {
  border-radius: 0.12rem;
  padding: 0.2rem  0.15rem;
  box-shadow: 0 0 0.15rem rgba(0, 0, 0, 0.12);
  background-color: #fff;
  margin-bottom: 0.2rem;
  display: -webkit-box;
  display: box;
  -webkit-box-pack: justify;
  box-pack: justify;
}

.index-page .p1th .item .lbox {
  position: relative;
}

.index-page .p1th .item .lbox .icon-com {
  width: 0.27rem;
  height: 0.27rem;
  background-size: cover;
  display: block;
  position: absolute;
  top: -0.1rem;
  left: 0;
}

.index-page .p1th .item .lbox .icon-boy {
  background-image: url(http://mojikids.yueus.com/static/wap/image/bb/list/boy-mark-54x54.png);
}

.index-page .p1th .item .lbox .icon-girl {
  background-image: url(http://mojikids.yueus.com/static/wap/image/bb/list/girl-mark-54x54.png);
}

.index-page .p1th .item .lbox .ui-avatar-icon {
  margin-left: 0.2rem;
}

.index-page .p1th .item .cbox {
  display: -webkit-box;
  display: box;
  -webkit-box-flex: 1;
  box-flex: 1;
  -webkit-box-orient: block-axis;
  text-align: center;
}

.index-page .p1th .item .cbox .box1 {
  font-size: 0.17rem;
  padding-top: 0.05rem;
}

.index-page .p1th .item .cbox .box2 {
  padding-top: 0.1rem;
  font-size: 0.14rem;
}

.index-page .p1th .item .rbox {
  padding-top: 0.18rem;
}

.index-page .p1th .btn {
  padding: 0.05rem 0.1rem 0 0.1rem;
}