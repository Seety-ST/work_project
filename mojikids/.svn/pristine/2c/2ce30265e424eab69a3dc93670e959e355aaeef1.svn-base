.store-info-page{
	.p1th{
		.item-wrap{
			.img-item{
				width: 100%;
				height: 210px;
				i.img{
					width:100%;
					height:100%;
					display:block;
					background-repeat: no-repeat;
					background-size: cover;
					background-position: center;
					background-image: url(../../image/about/test/750x420.jpg);
				}
			}
		}
	}
	.p2th{
		margin-bottom: 10px;
	}
	.p3th{
		background-color: #fff;
		.item-wrap{
			padding:15px 15px 0px 15px;
			dl{
				padding-bottom: 15px;
				display:-webkit-box;
				dt{
					width:70px;

				}
				dd{
					-webkit-box-flex:1;
				}
			}
		}
	}
	.mint-popup{
		width:100%;
		.map_pop{
			width:100%;
			height:500px;
			margin: 0 auto;
		}
	}
}