// ------------------------------
// 按钮开关
// ------------------------------
.ui-ckb-switch {
  position: relative;
  display: inline-block;
  width: 52px;
  height: 32px;
  line-height: 32px;

  text-align: left;
  font-size: 12px;
  color: #555;
  overflow: visible;

  @include box-sizing(border-box);
  @include background-clip(content-box);

  &.ui-ckb-switch-on {
    .ui-ckb-switch-container {
      border-color: currentcolor;
    }
    .ui-ckb-switch-handle {
      @include transform(translateX(22px));
      @include box-shadow(0 3px 8px rgba(#000, .1), 0 0 0 1px currentcolor);
    }
  }

  &.ui-ckb-switch-off {
    .ui-ckb-switch-background {
      margin-left: -40px;
    }
    .ui-ckb-switch-container {
      border-color: #e5e5e5;
    }
    .ui-ckb-switch-handle {
      @include transform(translateX(0px));
      @include box-shadow(0 3px 8px rgba(#000, 0.1), 0 0 0 1px #fff);
    }
  }
}

.ui-ckb-switch-checkbox {
  display: none;
  position: absolute;
  left: 0;
  top: 0;
  margin: 0;
  border: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.ui-ckb-switch-wrapper {
  display: block;
  border: 1px solid #e5e5e5;  
  width: 100%;
  height: 100%;
  overflow: hidden;

  background-color: #bababa;
  @include box-sizing(border-box);
  @include background-clip(content-box);
  @extend %extend-ui-ckb-switch-border-radius;
}
.ui-ckb-switch-background {
  display: block;
  margin: 0 1px 1px -16px;
  height: 100%;
  width: 200%;
  background-image: linear-gradient(to bottom, #ffffff, #ffffff);
  background-color: currentcolor;
  background-repeat: no-repeat;
  background-position: 52px 0px;
  @include background-clip(content-box);

  @include transition(margin-left 200ms ease-out);

  @include backface-visibility(visible);

  @extend %extend-ui-ckb-switch-border-radius;
}

.ui-ckb-switch-container {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: transparent;

  border-width: 1px;  
  border-style: solid;

  @include box-sizing(border-box);
  @include background-clip(content-box);

  @extend %extend-ui-ckb-switch-border-radius;
}

.ui-ckb-switch-handle {
  display: inline-block;
  width: 28px;
  height: 100%;
  margin: 0 3px 0 0;
  background: #fff;

  @include box-sizing(border-box);
  @include background-clip(border-box);
  @include transition(transform 200ms ease-out);

  @extend %extend-ui-ckb-switch-border-radius;
}

%extend-ui-ckb-switch-border-radius {
  @include border-radius(28px);
}





